<Project Sdk="Microsoft.NET.Sdk.BlazorWebAssembly">

    <PropertyGroup>
        <TargetFramework>net10.0</TargetFramework>
        <Nullable>enable</Nullable>
        <ImplicitUsings>enable</ImplicitUsings>
        <OverrideHtmlAssetPlaceholders>true</OverrideHtmlAssetPlaceholders>
        <EnableDefaultSassItems>false</EnableDefaultSassItems>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="Microsoft.AspNetCore.Components.WebAssembly" Version="10.0.0"/>
        <PackageReference Include="Microsoft.AspNetCore.Components.WebAssembly.DevServer" Version="10.0.0" PrivateAssets="all"/>
        <PackageReference Include="DartSassBuilder" Version="1.1.0" PrivateAssets="all"/>
    </ItemGroup>

    <ItemGroup>
        <SassFile Include="styles/app.scss" />
    </ItemGroup>

    <Target Name="CopySassOutputToWwwroot" AfterTargets="DartSass_Build">
        <MakeDir Directories="wwwroot/css" />
        <Copy SourceFiles="styles/app.css"
              DestinationFiles="wwwroot/css/app.css"
              SkipUnchangedFiles="true" />
    </Target>

</Project>
